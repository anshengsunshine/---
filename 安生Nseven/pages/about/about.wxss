/* pages/about/about.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 100%;
}

.container .text {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.container .text text {
  padding: 2%;
  text-indent: 30px;
}

.index-top {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 94%;
  height: 600rpx;
  padding-left: 3%;
  border-radius: 20px;
  padding-top: 1%;
  box-shadow: 3px 3px 5px #ccc;
}

swiper {
  display: block;
  height: 600rpx;
}

swiper image {
  height: 100%;
  border-radius: 13px;
  box-shadow: 3px 3px 5px #ccc;
}
